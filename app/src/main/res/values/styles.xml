<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/red_hat_text_bold</item>
        <item name="android:titleMarginBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="BackButton" >
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/colorSecondaryRed</item>
        <item name="fontFamily">@font/red_hat_text_bold</item>
        <item name="android:titleMarginBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@drawable/right_top_rounded</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="AppTextBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/red_hat_text_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>